<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Start Ping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ping_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="text"
            android:text="<default_value>"
            android:ems="10"
            android:id="@+id/url_to_prefire"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/url_to_ping" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="<default_value>"
            android:ems="10"
            android:id="@+id/url_to_ping"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/ping_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/ping_output"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/url_to_prefire"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="10"
            android:ems="10"
            android:id="@+id/delay" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/ping_output" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>